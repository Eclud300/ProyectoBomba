<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoBomba.View.Inicio">

    <!-- Fondo de la página con gradiente -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#A2D9FF" Offset="0.0"/>
            <GradientStop Color="#2D9CDB" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <ContentPage.Content>
        <VerticalStackLayout Padding="20">
            <!-- Título de la página -->
            <Label Text="Inicio"
                   FontSize="30"
                   Margin="0,15,0,0"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalTextAlignment="Center" />

            <FlexLayout Margin="23,40,0,0">
                <VerticalStackLayout>
                    <Label Text="Bomba de agua"
                           FontSize="19"
                           FontAttributes="Bold" />
                </VerticalStackLayout>

                <Label Text="Tiempo restante"
                       FontSize="19"
                       FontAttributes="Bold"
                       Margin="30,0,0,0" />
            </FlexLayout>

            <!-- Switch y tiempo -->
            <HorizontalStackLayout>
                <Switch IsToggled="True" 
                        Margin="65,40,0,0"
                        ScaleX="2.0" 
                        ScaleY="2.0" />
                <Label Text="00:30"
                       TextColor="Black"
                       FontAttributes="Bold"
                       FontSize="35"
                       Margin="132,40,0,0" />
            </HorizontalStackLayout>

            <!-- Aquí puedes agregar más contenido si lo necesitas -->
            <FlexLayout Margin="23,130,0,0">
                <!-- Otro contenido si es necesario -->
            </FlexLayout>

            <!-- Área para la imagen de la gráfica de pastel -->
            <VerticalStackLayout HorizontalOptions="Center">
                <Image Source="tinaco1.png"
                       WidthRequest="300"
                       HeightRequest="300"
                       Aspect="AspectFit"
                       Margin="0,40,0,0"
                       
                                    >
                    
                </Image>
               
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ContentPage.Content>

</ContentPage>